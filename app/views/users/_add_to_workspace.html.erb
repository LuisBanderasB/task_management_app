
<div class="modal fade" id="add_user_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="modal-title fs-5" id="exampleModalLabel">Add a new user to your worspace</h1>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <%= form_with scope: :users, url: invite_user_path, local: true do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :email, class:"form-label" %><br />
            <%= f.text_field :email, placeholder: "email@example.com", class:"form-control"%>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= f.submit 'Send invitation', class: 'btn btn-primary rounded-1'%>
        </div>
      </form>
    <% end %>
  </div>
</div>
</div>