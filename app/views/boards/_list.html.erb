<div class="container text-center">
  <div class="row row-cols-auto">
    <% @boards.each do |board| %>
      <div class="col mt-4">
        <div class="card text-center py-2">
          <h5 class="card-title">
            <%= link_to board.name, board_path(board.id), class: "text-reset text-decoration-none" %>
          </h5>
          <div class="card-footer">
            <p class="card-text">
              <small class="text-muted">
                Last updated <%= time_ago_in_words(board.updated_at) %>
              </small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    <div class="add-board col mt-4">
      <div class="card bg-secondary">
        <div class="card-body text-white d-flex align-items-center justify-content-center">
          <a href="#" class="text-reset text-decoration-none" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add new board
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal">
  <%= render 'boards/add_modal' %>
</div>