<div class="container text-center">
  <div class="row">
    <% @boards.each do |board| %>
      <div class="col mt-4">
        <div class="card text-center py-2">
          <h5 class="card-title">
            <%= link_to board.name, board_path(board.id), class: "text-reset text-decoration-none" %>
          </h5>
          <div class="card-footer">
            <p class="card-text">
              <small class="text-muted">
                Last updated <%= time_ago_in_words(board.updated_at) %>
              </small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>