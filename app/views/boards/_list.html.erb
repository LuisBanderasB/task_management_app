<div class="container text-center">
  <div class="row row-cols-auto">
    <% @boards.each do |board| %>
      <div class="col mt-4">
        <div class="card text-center py-2">
          <h5 class="card-title">
            <%= link_to board.name, board_path(board.id), class: "text-reset text-decoration-none" %>
          </h5>
          <div class="card-footer">
            <p class="card-text">
              <small class="text-muted">
                Last updated <%= time_ago_in_words(board.updated_at) %>
              </small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    <div class="add-board col mt-4">
      <div class="card bg-secondary">
        <div class="card-body text-white d-flex align-items-center justify-content-center">
          <a href="#" class="text-reset text-decoration-none" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add new board
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with scope: :board, url: boards_path, local: true do |f| %>
          <p> 
            <%= f.label :name %><br/> 
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.label :visibility %><br/> 
            <%= f.select :visibility, options_for_select(["public", "private"]), class: "form-control selectpicker", "data-live-search" => "true" %>
          </p>
          <p>
            <%= f.submit %> 
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>