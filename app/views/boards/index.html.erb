<div class="container mt-5">
  <h3>Your boards</h3>
  <div class="container text-center">
    <div class="row">
      <% @boards.each do |board| %>
        <div class="col mt-4">
          <div class="card text-center py-2">
            <h5 class="card-title">
              <%= board.name %>
            </h5>
            <div class="card-footer">
              <p class="card-text">
                <small class="text-muted">
                  Last updated <%= time_ago_in_words(board.updated_at) %>
                </small>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>