<div class="container mt-5">
  <h2>setup your password</h2>
  <p class="mb-5">Finish setting up your account to join your team</p>
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>
    <% if f.object.class.require_password_on_accepting %>
      <div class="mb-3">
        <%= f.label :password, class:"form-label"%><br/>
        <%= f.password_field :password, class: "form-control w-50"%>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control w-50" %>
      </div>
    <%end%>
    <div class="actions">
      <%= f.submit t("devise.invitations.edit.submit_button"), class:"btn btn-primary bg-primary border-0" %>
    </div>
  <% end %>
</div>

